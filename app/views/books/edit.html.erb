<div class ="container">
	<row>
		<div class ="col-xs-offset-3 col-xs-6">
			<h2>Editing Book</h2>
			<%= form_for(@book) do |f| %>
				<row>
					<div class ="col-xs-12">
						<p>Title</p>
						<%= f.text_field :title %>
						<p>Opinion</p>
						<%= f.text_area :body %>
						<P><%= f.submit "Update book", class: "update-btn" %></P>
				
					</div>
				</row>
			<% end %>
		</div>
	</row>
</div>