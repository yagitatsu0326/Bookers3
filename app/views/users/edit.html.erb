<div class ="container">
	<% if @user.errors.any? %>
		<div class="alert alert-warning">
	  		<h2> errors prohibited this book from being saved</h2>
	    	<ul>
	      		<% @user.errors.full_messages.each do |message| %>
	      			<li><%= message %></li>
	      		<% end %>
	    	</ul>
	   </div>
	<% end %>
	<row>
		<div class ="col-xs-offset-3 col-xs-6">
			<h2>User info</h2>
			<%= form_for(@user) do |f| %>
				<div class ="row">
					<label>Name</label>
					<%= f.text_field :name, class: "col-xs-12 " %>
				</div>
				<div class ="row">
					<label>Image</label>
					<%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "col-xs-12 " %>
				</div>
				<div class ="row">
					<label>Introduction</label>
					<%= f.text_area :introduction, class: "col-xs-12 " %>
				</div>
				<div class ="row">
					<P><%= f.submit "Update user", class: "col-xs-12 update-btn" %></P>
				</div>
				</row>
			<% end %>
		</div>
	</row>
</div>