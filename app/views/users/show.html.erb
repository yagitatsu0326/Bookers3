<div class ="container">
	<row>
		<div class ="col-xs-5">
			<%= render "layouts/partial", {user: @user, book: @book } %>
		</div>
		<div class ="col-xs-7">
			<h2>BOOKS</h2>
			<table>
				<thead>
					<tr>
						<th>IMAGE</th>
						<th>TITLE</th>
						<th>OPINION</th>
					</tr>
				</thead>
				<tbody>
					<% @books.each do |book| %>
					<tr>
						<td>IMAGE</td>
						<td><a href = "/books/<%= book.id %>"><%= book.title %></a></td>
						<td><%= book.body %></td>
					</tr>
				 	<% end %>
				</tbody>
			</table>
		</div>
	</row>
</div>